<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SectionsActivity"
    android:orientation="vertical"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/textView_section_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:textSize="30sp"
        android:text="Sections"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:background="@drawable/layout_listitem_background"
        android:transitionName="@string/transition_menu"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@+id/button_sections_save"
        android:layout_below="@+id/textView_section_header"
        >
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView_section"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:gravity="center_horizontal"
            />

    </LinearLayout>

    <Button
        android:id="@+id/button_sections_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:text="Done"
        android:textSize="40sp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"

        />



</RelativeLayout>