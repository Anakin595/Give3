<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/parent_listitem_layout"
    android:background="@drawable/layout_listitem_background"
    android:layout_margin="5dp">
        <TextView
            android:id="@+id/parent_text_listitem"
            android:layout_height="46dp"
            android:layout_width="wrap_content"
            android:layout_weight="4"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:text="Root"
            android:layout_marginHorizontal="10dp"/>
        <ImageButton
            android:id="@+id/parent_dropdown_arrow"
            android:layout_width="0dp"
            android:minWidth="50dp"
            android:layout_height="50dp"
            android:src="@drawable/arrow_down"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:contentDescription="Dropdown arrow" />
</LinearLayout>