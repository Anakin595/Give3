<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    >



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <TextView
        android:layout_weight="1"
        android:id="@+id/textView_section"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:padding="15dp"
        android:textSize="40sp"
        android:text="Sections(0)"
        android:gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/layout_listitem_background"
        android:transitionName="@string/transition_menu"
        />

    <TextView
        android:layout_weight="1"
        android:id="@+id/textView_tasks"
        android:layout_width="fill_parent"
        android:padding="15dp"
        android:textSize="40sp"
        android:text="Tasks(0)"
        android:layout_margin="10dp"
        android:gravity="center"
        android:background="@drawable/layout_listitem_background"
        android:transitionName="@string/transition_menu"
        android:layout_height="0dp" />

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="0dp">

        <Button
            android:id="@+id/button_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NEXT"
            android:enabled="false"
            android:layout_margin="20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            />

    </RelativeLayout>






</LinearLayout>