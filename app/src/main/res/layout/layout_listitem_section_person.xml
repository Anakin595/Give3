<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="10dp"
    android:background="@drawable/layout_person_listitem">

    <EditText
        android:id="@+id/text_listitem_section_person"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:gravity="center_vertical"
        android:inputType="text"
        android:text="New..."
        android:textSize="20sp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="@id/button_listitem_section_person_del"
        app:layout_constraintEnd_toStartOf="@+id/button_listitem_section_person_del"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/button_listitem_section_person_del" />

    <Button
        android:id="@+id/button_listitem_section_person_del"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginEnd="5dp"
        android:background="@drawable/baseline_delete_24"
        app:layout_constraintEnd_toEndOf="parent"
        />

</android.support.constraint.ConstraintLayout>